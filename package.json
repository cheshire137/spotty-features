{
  "name": "spotty-features",
  "version": "0.0.1",
  "description": "Playing around with Spotify's audio features API endpoints.",
  "main": "src/server.js",
  "author": "Sarah Vessels <cheshire137@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "express": "^4.14.1",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-sourcemaps": "^2.4.1",
    "promise-polyfill": "^6.0.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.2",
    "recharts": "^0.20.5",
    "throttle-debounce": "^1.0.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.9.0",
    "whatwg-fetch": "^2.0.2"
  },
  "scripts": {
    "build": "node_modules/.bin/browserify src/index.jsx -o src/public/bundle.js -t [ babelify --presets [ es2015 react ] ]",
    "serve": "node src/server.js",
    "watch": "node_modules/.bin/watchify src/index.jsx -o src/public/bundle.js -t [ babelify --presets [ es2015 react ] ] -v",
    "postinstall": "yarn run build",
    "test": "yarn run style && yarn run unit-test",
    "unit-test": "jest",
    "style": "node_modules/xo/cli.js src/components/*.jsx src/models/*.js src/*.jsx src/*.js gulpfile.js"
  },
  "xo": {
    "esnext": true,
    "globals": [
      "document",
      "fetch",
      "window"
    ],
    "space": true,
    "extends": "xo-react",
    "rules": {
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true
        }
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "semi": [
        2,
        "never"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "react/jsx-closing-bracket-location": [
        2,
        "tag-aligned"
      ],
      "react/jsx-no-bind": [
        2,
        {
          "allowArrowFunctions": true
        }
      ],
      "react/jsx-space-before-closing": [
        2,
        "always"
      ],
      "unicorn/catch-error-name": 0,
      "no-prototype-builtins": 0,
      "no-mixed-operators": 0,
      "dot-location": [
        2,
        "object"
      ],
      "react/prop-types": [
        2,
        {
          "ignore": [
            "children",
            "location",
            "router"
          ]
        }
      ],
      "camelcase": [
        2,
        {
          "properties": "never"
        }
      ],
      "prefer-arrow-callback": [
        2,
        {
          "allowNamedFunctions": true
        }
      ],
      "default-case": 0
    }
  },
  "devDependencies": {
    "eslint-config-xo-react": "^0.10.0",
    "eslint-plugin-react": "^6.10.0",
    "jest": "^18.1.0",
    "xo": "^0.17.1"
  }
}
